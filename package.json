{
  "name": "podhouse",
  "version": "0.1.0",
  "description": "The best way to listen your favorite podcasts.",
  "private": true,
  "author": "Leonardo Maldonado <leonardomso11@gmail.com>",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "web:dev": "yarn workspace @podhouse/web dev",
    "web:start": "yarn workspace @podhouse/web start",
    "web:build": "yarn workspace @podhouse/web build",
    "web:test": "yarn workspace @podhouse/web test",
    "web:cypress": "yarn workspace @podhouse/web cypress",
    "web:cypress:install": "yarn workspace @podhouse/web cypress:install",
    "web:cypress:open": "yarn workspace @podhouse/web cypress:open",
    "web:cypress:run": "yarn workspace @podhouse/web cypress:run",
    "web:cypress:verify": "yarn workspace @podhouse/web cypress:verify",
    "web:lint": "yarn workspace @podhouse/web lint",
    "web:format": "yarn workspace @podhouse/web format",
    "server:start": "yarn workspace @podhouse/server start",
    "server:test": "yarn workspace @podhouse/server test",
    "server:lint": "yarn workspace @podhouse/server lint",
    "server:format": "yarn workspace @podhouse/server format",
    "update": "yarn update-schema && yarn relay",
    "update-schema": "yarn workspace @golden-stack/server update-schema",
    "relay": "yarn workspace @podhouse/relay relay",
    "lint:staged": "lint-staged",
    "lint": "yarn workspace @podhouse/web lint & yarn workspace @podhouse/server lint",
    "test": "yarn workspace @podhouse/web test & yarn workspace @podhouse/server test"
  },
  "devDependencies": {
    "husky": "^4.2.5",
    "lint-staged": "^10.2.6",
    "now": "^19.0.1",
    "prettier": "^2.0.5",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^5.0.0",
    "typescript": "^3.9.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "yarn lint",
      "yarn test",
      "git add"
    ],
    "*.tsx": [
      "yarn lint",
      "yarn test",
      "git add"
    ]
  }
}
